<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние, когда элемент активен (enabled) -->
    <item android:state_enabled="true" android:drawable="@drawable/enter_btn2" />
    <!-- Неактивное состояние -->
    <item android:state_enabled="false" android:drawable="@drawable/enter_btn" />
