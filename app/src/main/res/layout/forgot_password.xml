<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Authorization"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top"
    android:fontFamily="sans-serif">

    <!-- Ручка сверху -->
    <View
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/handle_background" />

    <!-- Кнопка назад -->
    <FrameLayout
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/arrowdown" />
    </FrameLayout>

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Восстановление пароля"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/close"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание Описание Описание Описание Описание Описание Описание Описание "
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/head"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:hint="Почта"
        android:textSize="20sp"
        android:textColor="#4F4F54"
        android:textColorHint="#4F4F54"
        android:inputType="textEmailAddress"
        android:layout_marginTop="30dp"
        android:layout_below="@id/description"/>

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:hint="Код"
        android:textSize="20sp"
        android:textColor="#4F4F54"
        android:textColorHint="#4F4F54"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_below="@id/email"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:hint="Новый пароль"
        android:textSize="20sp"
        android:textColor="#4F4F54"
        android:textColorHint="#4F4F54"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_below="@id/code"/>

    <RelativeLayout
        android:id="@+id/continue_auth"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/enter_btn2"
        android:layout_below="@id/password">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:text="продолжить"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/center_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/continue3" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>