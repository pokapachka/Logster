<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0E"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Шапка -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/title_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logster"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_alignParentStart="true" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/background_btn"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:layout_alignTop="@id/title_home">

                    <ImageView
                        android:id="@+id/btn_settings"
                        android:layout_width="25dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/settingss" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_alignTop="@id/title_home"
                    android:layout_gravity="end"
                    android:background="@drawable/background_btn"
                    android:onClick="addWidgets">

                    <ImageView
                        android:id="@+id/btn_plus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plus" />
                </FrameLayout>
            </FrameLayout>

            <!-- RecyclerView для отображения виджетов -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/workout_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#0B0B0E">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#141418"
            android:layout_gravity="top"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/home_selector"/>

            <ImageView
                android:id="@+id/nav_calendar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/calendar_selector"/>

            <ImageView
                android:id="@+id/nav_statistics"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/statistics_selector"/>

            <ImageView
                android:id="@+id/nav_chat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:src="@drawable/chat_selector"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>