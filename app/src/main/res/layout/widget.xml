<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:fontFamily="sans-serif"
    android:background="@drawable/widget_background">

    <!-- Цифра для количества тренировок (вверху) -->
    <TextView
        android:id="@+id/workout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/settingwidget"/>

    <!-- Название тренировки (внизу) -->
    <TextView
        android:id="@+id/workout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:text="Название тренировки"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Ближайший день (внизу, под названием тренировки) -->
    <TextView
        android:id="@+id/workout_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:text="Ближайший день"
        android:textSize="15sp"
        android:textColor="#ABACB5" />

</RelativeLayout>